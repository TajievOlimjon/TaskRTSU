@using Domain.Entities
@model List<Employee>

<h1>Отделы</h1>

<table class="table">
   @* <a asp-action="Create" asp-controller="Department" class="btn btn-sm btn-success">*@
    <a asp-controller="Employee" asp-action="Create" class="btn btn-sm btn-success">
        Добавить
    </a>
    <thead>
        <tr>
            <th class="col">ФИО</th>
            <th class="col">Э-почта</th>
            <th class="col">Телефон</th>
            <th class="col">Поль</th>
            <th class="col">Адрес</th>
            <th class="col">Отдель</th>
            <th class="col">Должность</th>




        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.FirstName @x.LastName @x.Middle</td>
                <td>@x.Email</td>
                <td>@x.PhoneNumber</td>
                @*<td>@x.BitrthDate.ToString("0:dd/MM/yy H:mm:ss zzz").</td>*@
                <td>@x.Gender</td>
                <td>@x.Address</td>
                <td>@x.Department.DepartmentName</td>
                <td>@x.Position</td>
                

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Employee" asp-route-id="@x.Id" id="Edit">
                        Изменить
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-controller="Employee" asp-route-id="@x.Id" id="Details">
                        Подробне
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@x.Id" id="Delete">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
