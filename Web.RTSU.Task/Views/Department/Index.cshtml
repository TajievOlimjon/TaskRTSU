@model List<DepartmentDto>

<h1>Отделы</h1>

<table class="table">
    <a asp-action="Create" asp-controller="Department" class="btn btn-sm btn-success">
        Добавить
    </a>
    <thead>
        <tr>
            <th class="col">Названия отдела</th>
            <th class="col">Описания</th>
            <th class="col">Адрес</th>




        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
                <tr>
                    <td>@x.DepartmentName</td>
                    <td>@x.Description</td>
                    <td>@x.Address</td>

                    <td>
                       <a class="btn btn-warning" asp-action="Edit" asp-controller="Department" asp-route-id="@x.Id" id="Edit">
                            Изменить
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@x.Id" id="Delete">
                            Удалить
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>